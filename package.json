{
	"name": "inflint",
	"version": "1.1.4",
	"description": "Inflint is a tool which scans and verifies file name conventions.",
	"author": "Vinyl Depository <dev@vinyldepository.com> (https://www.vinyldepository.com)",
	"keywords": [
		"linter",
		"filesystem linter",
		"filename linter",
		"javascript",
		"typescript"
	],
	"contributors": [
		{
			"name": "tal-rofe",
			"email": "tal@vinyldepository.com"
		}
	],
	"license": "MIT",
	"homepage": "https://github.com/Vinyl-Depository/Inflint#readme",
	"bugs": {
		"url": "https://github.com/Vinyl-Depository/Inflint/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vinyl-Depository/Inflint.git"
	},
	"main": "dist/index.js",
	"files": [
		"dist/index.js",
		"bin"
	],
	"bin": {
		"inflint": "./bin/inflint.js"
	},
	"scripts": {
		"preinstall": "is-ci || npx only-allow yarn",
		"husky:install": "husky install",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"onboarding": "node ./scripts/onboarding.js",
		"prepare": "is-ci || run-s setdev onboarding",
		"dist:create": "webpack -c webpack.config.ts",
		"dist:remove": "rimraf dist",
		"dist": "run-s dist:remove dist:create",
		"lint": "eslint src/**/*",
		"lint:fix": "eslint src/**/* --fix",
		"format": "prettier --write \"**/*.{ts,js,json}\"",
		"type-check": "tsc --project ./tsconfig.json",
		"depcheck": "depcheck",
		"inflint": "inflint"
	},
	"dependencies": {
		"@expo/spawn-async": "1.6.0",
		"cosmiconfig": "7.0.1",
		"fast-glob": "3.2.11",
		"inquirer": "8.2.2",
		"micromatch": "4.0.5",
		"minimist": "1.2.6",
		"v8-compile-cache": "2.3.0",
		"yaml": "2.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "16.2.3",
		"@types/inquirer": "8.2.1",
		"@types/micromatch": "4.0.2",
		"@types/minimist": "1.2.2",
		"@types/webpack-node-externals": "2.5.3",
		"@typescript-eslint/eslint-plugin": "5.20.0",
		"@typescript-eslint/parser": "5.20.0",
		"chalk": "4.1.2",
		"commitizen": "4.2.4",
		"cz-vinyl": "1.2.0",
		"depcheck": "1.4.3",
		"eslint": "8.14.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"figlet": "1.5.2",
		"husky": "7.0.4",
		"inflint": "1.1.4",
		"is-ci": "3.0.1",
		"lint-staged": "12.4.0",
		"npm-run-all": "4.1.5",
		"prettier": "2.6.2",
		"rimraf": "3.0.2",
		"ts-loader": "9.2.8",
		"tsconfig-paths-webpack-plugin": "3.5.2",
		"typescript": "4.6.3",
		"webpack": "5.72.0",
		"webpack-cli": "4.9.2",
		"webpack-node-externals": "3.0.0"
	}
}
